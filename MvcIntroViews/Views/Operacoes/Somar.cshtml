@{
    ViewData["Title"] = "Soma";
}

<div>
    <h3>Operação Somar</h3>
    <p>Acesse o formulário a seguir para somar os dois números inseridos</p>

    <form asp-controller="Operacoes" asp-action="ResultadoSoma" method="post">
        <label for="n1">Número 1</label>
        <input type="text" name="n1" id="n1">

        <label for="n2">Número 2</label>
        <input type="text" name="n2" id="n2">

        <input type="submit" value="Somar">
    </form>
</div>
