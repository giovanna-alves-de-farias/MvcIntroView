@{
    ViewData["Title"] = "Multiplicação";
}

<div>
    <h3>Operação Multiplicar</h3>
    <p>Acesse o formulário a seguir para multiplicar os dois números inseridos</p>

    <form asp-controller="Operacoes" asp-action="ResultadoMultiplicacao" method="post">
        <label for="n1">Número 1</label>
        <input type="text" name="n1" id="n1">

        <label for="n2">Número 2</label>
        <input type="text" name="n2" id="n2">

        <input type="submit" value="Multiplicar">
    </form>
</div>
